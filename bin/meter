DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

ASSETS=$DIR/../assets
NODE=$DIR/../build/node/bin/node
REMOTE=/$(json -f $DIR/../etc/config.json manta.user)/stor/usage/assets

$NODE $DIR/../node_modules/manta-sync/manta-sync $ASSETS $REMOTE && \
$NODE $DIR/../cmd/generateLookup.js && \
$DIR/../chronos/bin/chronos
