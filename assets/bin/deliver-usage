#!/bin/bash
# Copyright (c) 2013, Joyent, Inc. All rights reserved.

set -o pipefail

dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

mmkdir -p $(dirname $DEST) && \
$dir/../lib/deliver-usage.js 2>stderr | \
mpipe -H "content-type: $HEADER_CONTENT_TYPE" $DEST
code=$?

[ -s stderr ] && mmkdir -p $(dirname $MANTA_OUTPUT_BASE) \
         && mput -f stderr $MANTA_OUTPUT_BASE && cat stderr 1>&2

exit $code
