#!/bin/bash
# Copyright (c) 2013, Joyent, Inc. All rights reserved.

set -o pipefail

dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

$dir/../lib/storage-reduce1.js 2>stderr \
| msplit -j -n $NUM_REDUCERS -f owner,namespace 2>>stderr

[ -s stderr ] && mmkdir -p $(dirname $MANTA_OUTPUT_BASE) \
         && mput -f stderr $MANTA_OUTPUT_BASE && cat stderr 1>&2
